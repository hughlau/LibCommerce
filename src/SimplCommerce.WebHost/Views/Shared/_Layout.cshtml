@using System.Globalization

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - SimplCommerce</title>
    @RenderSection("additionalMeta", false)

    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap4/css/bootstrap.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/multi-dropdown-menu/css/bootstrap-4-navbar.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/toastr/build/toastr.min.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/shop/css/helper.min.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/shop/css/plugins.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/shop/css/style.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/shop/css/skin-default.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/modules/core/site.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/CozaStore/vendor/animsition/css/animsition.min.css" />
    <script simpl-append-version="true" src="~/lib/angular/angular.js"></script>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    @RenderSection("head", required: false)
</head>
<body class="animsition">

    <div class="top-bar">
        <div class="container">
            <ul class="nav justify-content-end">
                <partial name="_SelectLanguagePartial" />
                <partial name="_LoginPartial" />
            </ul>
        </div>
    </div>
    <div class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-4 logo">
                    <a asp-area="Core" asp-controller="Home" asp-action="Index">
                        <img alt="SimplCommerce" src="~/modules/core/Logo_SimplCommerce.png" />
                    </a>
                </div>
                <div class="col-10 col-md-5 col-lg-7 search-box">
                    @await Component.InvokeAsync("SearchForm")
                </div>
                <div class="col-2 col-md-1 cart-btn">
                    @await Component.InvokeAsync("CartBadge")
                </div>
            </div>
        </div>
    </div>

    @*<div class="navbar navbar-expand-lg navbar-light bg-light btco-hover-menu main-nav">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">

                </div>
            </div>
        </div>*@

    <partial name="_CookieConsentPartial" />
    <div>
        <div class="container body-content">
            @RenderBody()
        </div>

    </div>

    <div class="footer-content">
        <div class="container">
            <div class="row">
                @*<div class="col-md-3">
                        <h4>@Localizer["Customer Service"]</h4>
                        <vc:menu menu-id="1"></vc:menu>
                    </div>
                    <div class="col-md-3">
                        <h4>Information</h4>
                        <vc:menu menu-id="2"></vc:menu>
                    </div>
                    <div class="col-md-6">
                        <h4>SimplCommerce</h4>
                        <p>The first ecommerce system built on .NET Core.</p>
                        <p>Simple to use and easy to customize</p>
                        <p>Cross platform and Open source</p>
                    </div>*@

            </div>
        </div>
    </div>
    <div class="container-fluid wenku-footer-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center wenku-help help-block">

                    <a href="about1.html" target="_blank" title="关于我们">关于我们</a>

                    <a href="about2.html" target="_blank" title="关于我们">文库协议</a>

                    <a href="about3.html" target="_blank" title="意见反馈">版本更新</a>

                    <a href="about4.html" target="_blank" title="免责声明">免责声明</a>

                    <a href="about5.html" target="_blank" title="意见反馈">联系我们</a>

                </div>
                <div class="col-md-12 text-center help-block">
                    文库之家&nbsp;&nbsp;&copy;@DateTime.Now.Year&nbsp;&nbsp;<span class="text-muted">|</span>&nbsp;&nbsp;
                    <a href="/sitemap.xml" title="站点地图" target="_blank">站点地图</a>
                </div>
                <div class="col-md-12 text-center help-block">
                    <a href="http://www.miitbeian.gov.cn/" target="_blank" rel="nofollow">粤ICP备18004373号-2</a>
                </div>
                <div class="col-md-12 text-center help-block">
                    <small>
                        Powered By <a href="#" style="color: #1abc9c;" target="_blank" title="DocHub">DocHub</a> v2.1
                    </small>
                </div>

                <div class="col-md-12 text-center">
                </div>
            </div>
        </div>
    </div>
    <div id="shopModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
            </div>
        </div>
    </div>
    <div id="productOverview" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content modal-padding">
            </div>
        </div>
    </div>
    <script>
            window.simplGlobalSetting = {};
            window.simplGlobalSetting.lang = '@CultureInfo.CurrentCulture.Name';
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap4/js/bootstrap.js"></script>
    <script simpl-append-version="true" src="~/lib/multi-dropdown-menu/js/bootstrap-4-navbar.js"></script>
    <script simpl-append-version="true" src="~/lib/matchheight/jquery.matchHeight.js"></script>
    <script simpl-append-version="true" src="~/lib/toastr/build/toastr.min.js"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
    @if (CultureInfo.CurrentCulture.Name == "vi-VN")
    {
        <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/locales/vi-vn.js"></script>
    }
    <script simpl-append-version="true" src="~/themes/CozaStore/vendor/animsition/js/animsition.min.js"></script>
    <script simpl-append-version="true" src="~/themes/CozaStore/js/cozastore.js"></script>
    <script simpl-append-version="true" src="~/modules/core/main.js"></script>
    <script simpl-append-version="true" src="~/modules/shoppingcart/add-to-cart.js"></script>
    <script simpl-append-version="true" src="~/modules/productcomparison/product-comparison.js"></script>
    <script simpl-append-version="true" src="~/modules/wishlist/wishlist.js"></script>

    <script simpl-append-version="true" src="~/lib/shop/js/main.js"></script>
    @RenderSection("scripts", required: false)

    <partial name="_AnalyticsScript" />
</body>
</html>
